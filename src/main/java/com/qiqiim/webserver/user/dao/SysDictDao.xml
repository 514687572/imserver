<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiqiim.webserver.user.dao.SysDictDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qiqiim.webserver.user.model.SysDictEntity" id="sysDictMap">
        <result property="id" column="id"/>
        <result property="dicType" column="dic_type"/>
        <result property="dicValue" column="dic_value"/>
        <result property="dicIndex" column="dic_index"/>
        <result property="remark" column="remark"/>
    </resultMap>
    
  <sql id="Base_Column_List" > 
  	  	     id ,  	        
  	  	      dic_type as dicType  ,  	        
  	  	      dic_value as dicValue  ,  	        
  	  	      dic_index as dicIndex  ,  	        
  	  	     remark   	        
  	  
  </sql>

	<select id="queryObject" resultType="com.qiqiim.webserver.user.model.SysDictEntity">
		select  <include refid="Base_Column_List" />  from sys_dict where id = #{value}
	</select>

	<select id="queryList" resultType="com.qiqiim.webserver.user.model.SysDictEntity">
		select  <include refid="Base_Column_List" />  from sys_dict
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_dict 
	</select>
	 
	<insert id="save" parameterType="com.qiqiim.webserver.user.model.SysDictEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_dict
		(
			`dic_type`, 
			`dic_value`, 
			`dic_index`, 
			`remark`
		)
		values
		(
			#{dicType}, 
			#{dicValue}, 
			#{dicIndex}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.qiqiim.webserver.user.model.SysDictEntity">
		update sys_dict 
		<set>
			<if test="dicType != null">`dic_type` = #{dicType}, </if>
			<if test="dicValue != null">`dic_value` = #{dicValue}, </if>
			<if test="dicIndex != null">`dic_index` = #{dicIndex}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_dict where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_dict where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>