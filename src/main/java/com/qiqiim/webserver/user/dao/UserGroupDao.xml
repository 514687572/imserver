<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiqiim.webserver.user.dao.UserGroupDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.qiqiim.webserver.user.model.UserGroupEntity" id="userGroupMap">
        <result property="id" column="id"/>
        <result property="avatar" column="avatar"/>
        <result property="groupName" column="group_name"/>
        <result property="members" column="members"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="Base_Column_List">
  	  	     id ,  	        
  	  	     avatar ,  	        
  	  	      group_name as groupName  ,  	        
  	  	     members ,  	        
  	  	     remark   	        
  	  
  </sql>

    <select id="queryGroupList" resultType="com.qiqiim.webserver.user.model.UserGroupEntity">
        select
              userGroup.id ,
  	  	     userGroup.avatar ,
  	  	      userGroup.group_name as groupName  ,
  	  	     userGroup.members ,
  	  	     userGroup.remark
        from user_group userGroup,user_group_list userGroupList where userGroup.id=userGroupList.group_id and
        userGroupList.uid=${uid}
    </select>

    <select id="queryObject" resultType="com.qiqiim.webserver.user.model.UserGroupEntity">
        select
        <include refid="Base_Column_List"/>
        from user_group where id = #{value}
    </select>

    <select id="queryList" resultType="com.qiqiim.webserver.user.model.UserGroupEntity">
        select
        <include refid="Base_Column_List"/>
        from user_group
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from user_group 
	</select>

    <insert id="save" parameterType="com.qiqiim.webserver.user.model.UserGroupEntity" useGeneratedKeys="true"
            keyProperty="id">
		insert into user_group
		(
			`avatar`, 
			`group_name`, 
			`members`, 
			`remark`
		)
		values
		(
			#{avatar}, 
			#{groupName}, 
			#{members}, 
			#{remark}
		)
	</insert>

    <update id="update" parameterType="com.qiqiim.webserver.user.model.UserGroupEntity">
        update user_group
        <set>
            <if test="avatar != null">`avatar` = #{avatar},</if>
            <if test="groupName != null">`group_name` = #{groupName},</if>
            <if test="members != null">`members` = #{members},</if>
            <if test="remark != null">`remark` = #{remark}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from user_group where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from user_group where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>